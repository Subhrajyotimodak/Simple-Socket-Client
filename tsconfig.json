{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "jsx": "react",
    "paths": {
      "core": [
        "./core/"
      ],
      "react-provider": [
        "./react-provider/"
      ],
      "utils": [
        "./utils/"
      ]
    },
    "rootDirs": [
      "./core",
      "./react-provider",
      "./utils"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./core",
    "./react-provider",
    "./utils",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
