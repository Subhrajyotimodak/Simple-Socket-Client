{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "jsx" : "preserve",
    "paths": {
      "@core": ["./@core/"],
      "@react": ["./@react/"],
      "@utils": ["./@utils/"]
    },
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
