{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "jsx" : "preserve",
    "paths": {
      "@core": ["./core/index.ts"],
      "@react": ["./react/index.ts"],
      "@utils": ["./utils/index.ts"]
    },
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
